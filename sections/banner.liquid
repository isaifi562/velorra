{%-
  liquid
  echo 'section-hero.css' | asset_url | stylesheet_tag
  echo 'component-text-content.css' | asset_url | stylesheet_tag
  assign style_classes = 'color-' | append: section.settings.style | append: ' relative'
-%}

<div class="hero__wrapper {{ style_classes }} {{ section.settings.outer_spacing }}">
  {%- render 'hero-block',
    block_id: section.id,
    link: section.settings.whole_banner_link,
    height: section.settings.height,
    external_video: section.settings.external_video,
    video: section.settings.video,
    video_mobile: section.settings.video_mobile,
    video_autoplay: true,
    image: section.settings.image,
    image_mobile: section.settings.image_mobile,
    background_overlay: section.settings.background_overlay,
    background_overlay_opacity: section.settings.background_overlay_opacity,
    align_vertical: section.settings.align_vertical,
    align_horizontal: section.settings.align_horizontal,
    align_vertical_mobile: section.settings.align_vertical_mobile,
    align_horizontal_mobile: section.settings.align_horizontal_mobile,
    content_source: 'blocks',
    heading_size: 'h2',
    paragraph_class: 'p2',
    content: section.blocks,
    text_color: section.settings.text_color,
    button_text_color: section.settings.button_text_color,
    button_background_color: section.settings.button_background_color,
    show_background: section.settings.show_background,
    show_background_mobile: section.settings.show_background_mobile,
    class: 'hero__block__'
  -%}
</div><!-- /.hero__wrapper -->


{{- 'section-header.css' | asset_url | stylesheet_tag -}}
<link rel="stylesheet" href="{{ 'component-form-search.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>
  {{- 'component-form-search.css' | asset_url | stylesheet_tag -}}
</noscript>

{%- if section.settings.enable_predictive_search -%}
  <script src="{{- 'predictive-search.js' | asset_url -}}" defer="defer"></script>
  <script src="{{- 'component-card-product.js' | asset_url -}}" defer="defer" data-theme-script></script>
{%- endif -%}

{%- assign megamenus = section.blocks | map: 'settings' -%}
{%- assign header_nav_html = '' -%}

{%- if megamenus -%}
  <link rel="stylesheet" href="{{ 'component-card-collection.css' | asset_url }}" media="print" onload="this.media='all'">

  <noscript>
    {{- 'component-card-collection.css' | asset_url | stylesheet_tag -}}
  </noscript>
{%- endif -%}

{%- liquid
  capture highlighted_links
    for block in section.blocks
      if block.type != 'highlighted_link'
        continue
      endif

      if block.settings.link_text != blank and block.settings.color != blank and block.settings.color != 'rgba(0,0,0,0)'
        echo '@@@' | append: block.settings.link_text | append: '|||' | append: block.settings.color
      endif
    endfor
  endcapture
-%}

{%- capture header_logo -%}
  <div class="header__logo {% if section.settings.transparent_logo_svg_code == blank and section.settings.transparent_logo == blank %} header__logo--one-image {% endif %} relative" style="--logo-width: {{ section.settings.logo_width | times: 0.1 }}rem; --logo-width-mobile: {{ section.settings.logo_width_mobile | times: 0.1 }}rem;">
    <a href="{{- routes.root_url -}}" class="inline-unstyled-link">
      {%- if section.settings.logo_svg_code != blank -%}
        {{- section.settings.logo_svg_code -}}
      {%- elsif section.settings.logo != blank -%}
        {%- assign logo = section.settings.logo -%}
        {%- assign logo_image_size_2x = logo.width | times: 2 | at_most: 5760 -%}

        <img
          srcset="{{ logo | image_url: width: logo.width }} 1x, {{ logo | image_url: width: logo_image_size_2x }} 2x"
          src="{{- logo | image_url: width: logo.width -}}"
          loading="lazy"
          width="{{- logo.width -}}"
          height="{{- logo.height -}}"
          alt="{{- logo.alt | default: shop.name | escape -}}"
          style="object-position: {{ logo.presentation.focal_point }}"
        >
      {%- endif -%}

      {%- if section.settings.transparent and template == 'index' and section.settings.logo_svg_code != blank or section.settings.logo != blank -%}
        {%- if section.settings.transparent_logo_svg_code != blank -%}
          {{- section.settings.transparent_logo_svg_code -}}
        {%- elsif section.settings.transparent_logo != blank -%}
          {%- assign transparent_logo = section.settings.transparent_logo | default: logo -%}
          {%- assign transparent_logo_width_size_2x = transparent_logo.width | times: 2 | at_most: 5760 %}

          <img
            srcset="{{ transparent_logo | image_url: width: transparent_logo.width }} 1x, {{ transparent_logo | image_url: width: transparent_logo_width_size_2x }} 2x"
            src="{{- transparent_logo | image_url: width: transparent_logo.width -}}"
            width="{{- transparent_logo.width -}}"
            height="{{- transparent_logo.height -}}"
            alt="{{- transparent_logo.alt | default: shop.name | escape -}}"
            style="object-position: {{ transparent_logo.presentation.focal_point }}"
          >
        {%- endif -%}
      {%- endif -%}

      <span
        class="{% if section.settings.logo == blank and section.settings.logo_svg_code == blank %}h4{% else %}visually-hidden{% endif %}"
      >{{- shop.name | escape -}}</span>
    </a>
  </div><!-- /.header__logo -->
{%- endcapture -%}

{%- if linklists[section.settings.menu].links.size > 0 -%}
  {%- capture header_nav_html -%}
    <nav class="header__nav small-hide medium-hide">
      <ul class="header__nav-items list-unstyled">
        {%- for link in linklists[section.settings.menu].links -%}
          {%-
            liquid
            assign megamenus_link_titles = megamenus | map: 'title'
            assign has_megamenu = false

            if megamenus_link_titles contains link.title
              assign has_megamenu = true
            endif

            assign link_color = false
            capture link_color
              render 'highlight-link', link: link, highlighted_links: highlighted_links
            endcapture
          -%}

          <li class="header__nav-item{% if has_megamenu %} header__nav-item--has-megamenu{% endif %}">
            <a href="{{- link.url -}}" class="header__nav-link motion-reduce p4 full-unstyled-link focus-inset{% if link.child_active %} is-current{% endif %}"{% if link.current %} aria-current="page"{% endif %}>
              <span {%- if link_color %} style="color: {{ link_color }};"{%- endif -%}>
                {{- link.title | escape -}}
              </span>

              {%- if link.links.size > 0 and section.settings.enable_first_level_arrow -%}
                {%- render 'icon-chevron-down' -%}
              {%- endif -%}
            </a>

            {%- if link.links.size > 0 -%}
              {%- if has_megamenu -%}
                {%- assign megamenu = megamenus | where: 'title', link.title | first -%}

                <div class="header__megamenu motion-reduce" tabindex="-1">
                  <div class="container container--fullwidth">
                    <div class="header__megamenu-grid">
                      <div class="header__megamenu-grid-col header__megamenu-grid-col--nav">
                        {%- for child_link in link.links -%}
                          <div class="header__megamenu-col">
                            <div class="header__megamenu--heading">
                              <a href="{{- child_link.url -}}" class="p3 motion-reduce">{{- child_link.title -}}</a>
                            </div><!-- /.header__megamenu--heading -->

                            {%- if child_link.links.size > 0 -%}
                              <ul class="header__megamenu-items list-unstyled">
                                {%- for grand_child_link in child_link.links -%}
                                  <li class="header__megamenu-item">
                                    <a href="{{- grand_child_link.url -}}" class="p5 header__megamenu-link motion-reduce">{{- grand_child_link.title -}}</a>
                                  </li><!-- /.header__megamenu-item -->
                                {%- endfor -%}
                              </ul><!-- /.header__megamenu-items list-unstyled -->
                            {%- endif -%}
                          </div><!-- /.header__megamenu-col -->
                        {%- endfor -%}
                      </div><!-- /.header__megamenu-grid-col -->

                      {%- for i in (1..3) -%}
                        <div class="header__megamenu-grid-col">
                          {%-
                            liquid
                            assign megamenu_image_key = 'item_' | append: forloop.index | append: '_' | append: 'image'
                            assign megamenu_subheading_key = 'item_' | append: forloop.index | append: '_' | append: 'subheading'
                            assign megamenu_heading_key = 'item_' | append: forloop.index | append: '_' | append: 'heading'
                            assign megamenu_link_key = 'item_' | append: forloop.index | append: '_' | append: 'link'
                          -%}
                          {%- if megamenu[megamenu_image_key] != blank -%}
                            <div class="header__megamenu-col">
                              {%- assign megamenu_items_count = megamenu_items_count | plus: 1 -%}
                              {%- render 'card-collection',
                                image: megamenu[megamenu_image_key],
                                subtitle: megamenu[megamenu_subheading_key],
                                title: megamenu[megamenu_heading_key],
                                url: megamenu[megamenu_link_key],
                                card_size: 'small',
                                card_content_layout: 'overlay',
                                class: 'header__megamenu-card',
                                background_overlay: true,
                                card_type: 'landscape',
                                show_title: true
                              -%}
                            </div><!-- /.header__megamenu-col -->
                          {%- endif -%}
                        </div><!-- /.header__megamenu-grid-col -->
                      {%- endfor -%}
                    </div><!-- /.header__megamenu-grid grid -->
                  </div><!-- /.container container--fullwidth -->
                </div><!-- /.header__megamenu -->
                {%- continue -%}
              {%- endif -%}

              <div class="header__nav-dropdown motion-reduce" tabindex="-1" data-nav-dropdown>
                <ul class="header__nav-links list-unstyled">
                  {%- for child_link in link.links -%}
                    <li class="header__nav-links-item">
                      <a href="{{- child_link.url -}}" class="header__nav-dropdown-link p4{% if child_link.current %} is-current{% endif %}" aria-label="{{- child_link.title | escape -}}"{% if child_link.current %} aria-current="page"{% endif %}>
                        <span>{{- child_link.title | escape -}}</span>

                        {%- if child_link.links.size > 0 -%}
                          {%- render 'icon-chevron-right' -%}
                        {%- endif -%}
                      </a>

                      {%- if child_link.links.size > 0 -%}
                        <ul class="header__nav-sublinks list-unstyled motion-reduce" data-nav-sublinks tabindex="-1">
                          {%- for grand_child_link in child_link.links -%}
                            <li class="header__nav-sublinks-item">
                              <a href="{{- grand_child_link.url -}}" class="header__nav-dropdown-link p4{% if grand_child_link.current %} is-current{% endif %}"{% if grand_child_link.current %} aria-current="page"{% endif %}>{{- grand_child_link.title | escape -}}</a>
                            </li><!-- /.header__nav-sublinks-item -->
                          {%- endfor -%}
                        </ul><!-- /.header__nav-sublinks list-unstyled -->
                      {%- endif -%}
                    </li><!-- /.header__nav-links-item -->
                  {%- endfor -%}
                </ul><!-- /.header__nav-links list-unstyled -->
              </div><!-- /.header__nav-dropdown -->
            {%- endif -%}
          </li><!-- /.header__nav-item -->
        {%- endfor -%}
      </ul><!-- /.header__nav-items list-unstyled -->
    </nav><!-- /.header__nav -->
  {%- endcapture -%}
{%- endif -%}

{% style %}
  {%- if section.settings.transparent and template == 'index' -%}
    .header.is-transparent {
      color: {{- section.settings.transparent_color -}};
    }
  {%- endif -%}

  {%- if section.settings.transparent and template == 'index' and section.settings.transparent_gradient -%}
    {%- liquid
      capture header_gradient_svg
        render 'header-gradient'
      endcapture
    -%}

    .header.is-transparent::after {
      background-image: url("data:image/svg+xml, {{- header_gradient_svg | strip -}}");
    }
  {%- endif -%}

  {% unless section.settings.enable_sticky_header == false %}
    .shopify-section-header {
      position: sticky;
      top: 0;
    }
  {% endunless %}
{% endstyle %}

{%-
  liquid
  capture style_classes
    echo 'header--logo-' | append: section.settings.logo_position | append: ' '
    if section.settings.transparent and template == 'index'
      echo 'is-transparent '
    endif
    echo 'header--dropdown-animation-' | append: section.settings.dropdown_animation_type | append: ' '
    unless section.settings.enable_sticky_header == false
      echo 'header--sticky '
    endunless
    echo 'color-' | append: section.settings.style | append: ' '
    if section.settings.logo_svg_code != blank or section.settings.logo != blank
      echo 'header--has-logo '
    endif
  endcapture
-%}

<sticky-header
  class="header {{ style_classes }}"
  {% if section.settings.transparent and template == 'index' %}
    data-transparent
  {% endif %}
  {% if section.settings.enable_sticky_header %}
    data-sticky
  {% endif %}
  {% if request.design_mode %}
    data-design-mode
  {% endif %}
  {% if section.settings.aside_navigation %}
    data-aside-nav
  {% endif %}
>
  <div class="container container--fullwidth" data-container>
    <div class="header__inner">
      {%- if section.settings.aside_navigation -%}
        <div class="header__left-side-wrapper">
      {%- endif -%}
      {%- liquid
        if linklists[section.settings.menu].links.size > 0
          render 'navigation-mobile', menu: linklists[section.settings.menu], highlighted_links: highlighted_links, show_on_desktop: section.settings.aside_navigation
        endif

        if section.settings.logo_position == 'left'
          echo header_logo
        endif

        if linklists[section.settings.menu].links.size > 0 and section.settings.logo_position != 'top' and section.settings.aside_navigation == false
          echo header_nav_html
        endif
      -%}
      {%- if section.settings.aside_navigation -%}
        </div><!-- /.header__left-side-wrapper -->
      {%- endif -%}

      {%- if section.settings.logo_position == 'top' -%}
        <div class="header__nav-utility small-hide medium-hide {% unless section.settings.enable_contact_links %} header__nav-utility--hidden {% endunless %}">
          {%- render 'contact-links' -%}
        </div><!-- /.header__nav-utility small-hide medium-hide -->
      {%- endif -%}

      {%- if section.settings.logo_position == 'center' or section.settings.logo_position == 'top' -%}
        {{- header_logo -}}
      {%- endif -%}

      <nav class="header__utils">
        <ul class="header__utils-items list-unstyled">
          <li class="header__utils-item small-hide medium-hide">
            <menu-drawer>
              <details class="disclosure-has-popup header__search-wrapper">
                <summary class="header__utils-link motion-reduce">
                  <span class="visually-hidden">{{- 'accessibility.search' | t -}}</span>

                  {%- render 'icon-search' -%}
                </summary>

                {%- if section.settings.enable_predictive_search -%}
                  <predictive-search class="header__search motion-reduce">
                {%- else -%}
                  <div class="header__search motion-reduce">
                {%- endif -%}
                  {%-
                    liquid
                    capture search_close_button_attr
                      echo 'onclick="this.closest(`details`).querySelector(`summary`).click()"'
                    endcapture
                    capture search_input_attr
                      if section.settings.enable_predictive_search
                        echo 'role="combobox"'
                        echo 'aria-expanded="false"'
                        echo 'aria-owns="predictive-search-results-list"'
                        echo 'aria-controls="predictive-search-results-list"'
                        echo 'aria-haspopup="listbox"'
                        echo 'aria-autocomplete="list"'
                        echo 'autocorrect="off"'
                        echo 'autocomplete="off"'
                        echo 'autocapitalize="off"'
                        echo 'spellcheck="false"'
                      endif
                    endcapture
                  -%}
                  <div class="header__search-wrapper">
                    <div class="container container--fullwidth">
                      {%- render 'form-search',
                        has_no_padding: true,
                        context: 'Header',
                        has_close_button: true,
                        close_button_attr: search_close_button_attr,
                        input_attr: search_input_attr
                      -%}
                    </div><!-- /.container container--fullwidth -->
                  </div><!-- /.header__search-wrapper -->

                  {%- if section.settings.enable_predictive_search -%}
                    <predictive-search-results class="header__search-results" tabindex="-1"></predictive-search-results><!-- /.header__search-results -->
                  {%- endif -%}
                {%- if section.settings.enable_predictive_search -%}
                  </predictive-search>
                {%- else -%}
                  </div><!-- /.header__search -->
                {%- endif -%}
              </details>
            </menu-drawer>
          </li><!-- /.header__utils-item -->

          {%- if shop.customer_accounts_enabled -%}
            <li class="header__utils-item small-hide medium-hide">
              <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header__utils-link motion-reduce full-unstyled-link" title="{%- if customer -%}{{ 'accessibility.account' | t }}{%- else -%}{{ 'accessibility.sign_in' | t }}{%- endif -%}">
                {%- render 'icon-user' -%}
              </a>
            </li><!-- /.header__utils-item -->
          {%- endif -%}

          <li class="header__utils-item header__utils-item--cart">
            <a href="{{- routes.cart_url -}}" class="header__utils-link motion-reduce full-unstyled-link relative" title="{{- 'accessibility.cart' | t -}}" id="cart-counter" data-cart-link>
              {%- render 'cart-counter' -%}
            </a>
          </li><!-- /.header__utils-item header__utils-item--cart -->
        </ul><!-- /.header__utils-items list-unstyled -->
      </nav><!-- /.header__utils -->
    </div><!-- /.header__inner -->

    {%- if section.settings.logo_position == 'top' and section.settings.aside_navigation == false -%}
      {{- header_nav_html -}}
    {%- endif -%}
  </div><!-- /.container container--fullwidth -->
</sticky-header><!-- /.header -->

{% javascript %}
  class StickyHeader extends HTMLElement {
    constructor() {
      super();
      this.transparent = this.hasAttribute("data-transparent");
      this.sticky = this.hasAttribute("data-sticky");
      this.selectors = {
        announcementBar: ".shopify-section-announcement-bar",
      };
      this.announcementBarheight = 0;

      this.transparent && document.body.classList.add('transparent-header')
    }

    connectedCallback() {
      ["scroll", "load", "resize"].forEach((event) =>
        window.addEventListener(event, (event) => {
          this.updateHeaderOffsetVariables();
          this.handleTransparent();
          this.checkOverflowSubmenus();
          if(this.transparent) this.offsetMainContent();
        })
      );

      if (this.hasAttribute('data-design-mode') && this.transparent) {
        window.addEventListener('shopify:section:load', (event) => {
          document.querySelector('#MainContent').style.marginTop = 0;

          // delay until styles are loaded
          setTimeout(() => {
            this.offsetMainContent();
          }, 1000);
          return;
        })
      }

      if (!this.transparent) return;
      this.offsetMainContent();
    }

    offsetMainContent() {
      document.querySelector(
        "#MainContent"
      ).style.marginTop = `-${this.offsetHeight  * 0.1}rem`;
    }

    handleTransparent() {
      const transparentAndSticky = this.transparent && this.sticky
      if (!transparentAndSticky) return;
      this.classList.toggle(
        "is-transparent",
        window.scrollY <= this.announcementBarHeight
      );
    }

    updateHeaderOffsetVariables() {
      const announcementBar = document.querySelector(
        this.selectors.announcementBar
      );
      this.announcementBarHeight = announcementBar
        ? announcementBar.offsetHeight
        : 0;
      const headerHeight = this.transparent ? 0 : this.offsetHeight;
      const headerOffset = this.announcementBarHeight + headerHeight;
      // Header height regardless of whether it's transparent or not.
      const transparentHeaderOffset = this.announcementBarHeight + this.offsetHeight;

      document.documentElement.style.setProperty(
        "--header-offset",
        `${headerOffset * 0.1}rem`
      );

      document.documentElement.style.setProperty(
        "--header-offset-with-transparent",
        `${transparentHeaderOffset * 0.1}rem`
      );

      const headerBottomPosition = this.getBoundingClientRect().bottom * 0.1;
      document.documentElement.style.setProperty(
        "--header-dropdown-max-height",
        `calc(100vmin - ${headerBottomPosition}rem)`
      );
    }

    checkOverflowSubmenus() {
      const containerBounderie =
        this.querySelector('[data-container]').getBoundingClientRect().width;

      this.querySelectorAll('[data-nav-sublinks]').forEach(submenu => {
        submenu.closest('[data-nav-dropdown]').classList.remove('is-overflowing');
        const [submenuLeft, submenuRight] = [
          submenu.getBoundingClientRect().left,
          submenu.getBoundingClientRect().right
        ];
        const submenuIsOverflowing =
          submenuLeft > containerBounderie || submenuRight > containerBounderie;
        if (submenuIsOverflowing) {
          submenu.closest('[data-nav-dropdown]')
            .classList.add('is-overflowing')
        }
      })
    }
  }

  customElements.define("sticky-header", StickyHeader);
{% endjavascript %}


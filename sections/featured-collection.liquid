{%- assign resources = section.settings.collection.products | default: nil -%}

<link rel="stylesheet" href="{{- 'section-featured-collection.css' | asset_url -}}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{- 'component-text-content.css' | asset_url -}}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{- 'swiper-bundle.min.css' | asset_url -}}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{- 'component-slider.css' | asset_url -}}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{- 'component-card-product.css' | asset_url -}}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{- 'component-badge.css' | asset_url -}}" media="print" onload="this.media='all'">

<noscript>
  {{- 'section-featured-collection.css' | asset_url | stylesheet_tag -}}
  {{- 'component-text-content.css' | asset_url | stylesheet_tag -}}
  {{- 'swiper-bundle.min.css' | asset_url | stylesheet_tag -}}
  {{- 'component-slider.css' | asset_url | stylesheet_tag -}}
  {{- 'component-card-product.css' | asset_url | stylesheet_tag -}}
  {{- 'component-badge.css' | asset_url | stylesheet_tag -}}
</noscript>

<script src="{{- 'swiper-bundle.min.js' | asset_url -}}" defer="defer" data-theme-script></script>
<script src="{{- 'slider-component.js' | asset_url -}}" defer="defer" data-theme-script></script>
<script src="{{- 'products-carousel.js' | asset_url -}}" defer="defer" data-theme-script></script>
<script src="{{- 'component-card-product.js' | asset_url -}}" defer="defer" data-theme-script></script>

{%-
  liquid
  assign style = ''
    if section.settings.enable_custom_background
      if section.settings.background_gradient != blank
        assign style = ' style="--section-background:' | append: section.settings.background_gradient | append: '"'
      elsif section.settings.background_color != blank
        assign style = ' style="--section-background:' | append: section.settings.background_color | append: '"'
      else
        assign style = ''
      endif
    endif

    capture style_classes
    echo 'color-' | append: section.settings.style | append: ' color-background'
    if style != ''
      echo ' section-background'
    endif
    echo ' relative overflow-hidden flex flex--direction-column'
    if section.settings.layout_mobile == 'image-bottom'
      echo ' section-featured-collection--flipped-mobile'
    endif
    if section.settings.layout_desktop == 'slider-left'
      echo ' section-featured-collection--flipped-desktop'
    endif
    echo ' section-featured-collection--image-' | append: section.settings.image_position
  endcapture
-%}
{% if section.settings.image_position == 'aside' %}
  <div class="{{ section.settings.outer_spacing }}">
{%- endif -%}
<div class="section-featured-collection {{ style_classes }} {% if section.settings.image_position == 'aside' %}{{ section.settings.inner_spacing }}{% else %} {{ section.settings.outer_spacing }}{% endif %}" {{ style }}>
  <div class="section__image media fill">
    {%-
      liquid
      assign image = section.settings.image
      assign image_mobile = section.settings.image_mobile | default: image
      if image
        assign image_src = image | image_url: width: 500
        assign mobile_image_src = image_mobile | image_url: width: 500
        capture image_srcset
          render 'srcset', image: image
        endcapture
        capture mobile_image_srcset
          render 'srcset', image: image_mobile
        endcapture
        assign image_alt = image.alt | escape

        render 'image', src: image_src, srcset: image_srcset, sizes: 'auto', alt: image_alt, width: image.witdth, height: image.height, class: 'small-hide', focal_point: image.presentation.focal_point
        render 'image', src: mobile_image_src, srcset: mobile_image_srcset, sizes: 'auto', alt: image_alt, width: image.witdth, height: image.height, class: 'medium-hide large-up-hide', focal_point: image_mobile.presentation.focal_point
      else
        echo 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg'
      endif
    -%}
  </div><!-- /.section__image -->

  <div class="section__content-wrapper relative">
    <div class="container">
      <div class="grid grid--row-gap-0 {% if section.settings.layout_desktop == 'slider-left' %} grid--reverse {% endif %}">
        {%- if section.settings.image_position != 'aside' -%}
          <span class="grid__item small-hide medium-hide grid__item--s-5"></span><!-- /.grid__item -->

          <span class="gird__item small-hide medium__hide grid__item--s-1 section__content-background"></span>
        {%- endif -%}

        <div class="grid__item grid__item--xs-12{% if section.settings.image_position != 'aside' %} grid__item--s-6{% endif %} relative">
          <div class="section__inner mb-xs mb-0--large{% if section.settings.image_position == 'background' %} {{ section.settings.inner_spacing }}{% endif %}">
            {%-
              liquid
              render 'text-content', inner_settings: section.settings, heading_size_tag: 'h3', heading_class: section.settings.heading_size, subheading_class: 'sh--3', paragraph_class: 'p3', class: 'section__'

              capture attr
                if section.settings.products_size == 'small'
                  echo ' data-fixed-width="208"'
                  echo ' data-fixed-width-desktop="208"'
                else
                  echo ' data-slides-per-view="3"'
                  echo ' data-slides-per-view-desktop="2"'
                endif

                if section.settings.layout_desktop == 'slider-left'
                  echo ' data-direction="rtl"'
                endif
              endcapture

              if section.settings.image_position == 'background'
                assign infinite_direction = 'right'
                if section.settings.layout_desktop == 'slider-left'
                  assign infinite_direction = 'left'
                endif
              endif
              render 'products-feed', autoplay: section.settings.autoplay, autoplay_speed: section.settings.autoplay_speed, resources: resources, attr: attr, infinite_direction: infinite_direction, products_count: section.settings.products_count
            -%}

            <div class="section__actions mt-s mt-xxl--large">
              {%-
                liquid
                if section.settings.button_text != blank and section.settings.collection != blank
                  assign button_url = section.settings.button_url | default: section.settings.collection.url

                  assign button_styles = section.settings.button_size
                  if section.settings.button_style == 'link'
                    assign button_css = 'link'
                  else
                    assign button_css = 'button'
                    assign button_styles = button_styles | append: ',' | append: section.settings.button_style
                  endif

                  render 'button', type: 'link', value: section.settings.button_text, href: button_url, styles: button_styles, css: button_css
                endif
              -%}
            </div><!-- /.section__actions -->
          </div><!-- /.section__inner -->
        </div><!-- /.grid__item -->
      </div><!-- /.grid -->
    </div><!-- /.container -->
  </div><!-- /.section__content-wrapper -->
</div><!-- /.section-featured-collection -->
{% if section.settings.image_position == 'aside' %}
  </div>
{%- endif -%}


{%-
  liquid
  case icon
    when 'truck'
      render 'icon-truck'
    when 'card'
      render 'icon-card'
    when 'cash'
      render 'icon-cash'
    when 'shield-check'
      render 'icon-shield-check'
    when 'globe'
      render 'icon-globe'
    when 'pin'
      render 'icon-pin'
    when 'lock'
      render 'icon-lock'
    when 'mail'
      render 'icon-envelope'
    when 'ruler'
      render 'icon-ruler'
    when 'phone'
      render 'icon-phone'
    when 'check'
      render 'icon-check'
    when 'tag'
      render 'icon-tag'
    when 'calendar'
      render 'icon-calendar'
    when 'refresh'
      render 'icon-refresh'
    when 'exclamation_mark'
      render 'icon-exclamation-circle'
    when 'question_mark'
      render 'icon-question-circle'
  endcase
-%}

{% doc %}
  @prompt
    Create a discount coupon code input block for the cart or checkout page that allows customers to enter and apply discount codes with proper styling and functionality
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-discount-coupon-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border: 1px solid {{ block.settings.border_color }};
    margin: {{ block.settings.margin }}px 0;
  }

  .ai-discount-coupon__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-discount-coupon__heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
  }

  .ai-discount-coupon__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    opacity: 0.8;
  }

  .ai-discount-coupon__form-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: flex-start;
  }

  .ai-discount-coupon__input-wrapper-{{ ai_gen_id }} {
    flex-grow: 1;
    position: relative;
  }

  .ai-discount-coupon__input-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    font-size: 14px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-discount-coupon__input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_border_color }};
    box-shadow: 0 0 0 2px {{ block.settings.input_focus_border_color }}33;
  }

  .ai-discount-coupon__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-discount-coupon__button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease, transform 0.2s ease;
    white-space: nowrap;
    min-width: 80px;
  }

  .ai-discount-coupon__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
  }

  .ai-discount-coupon__button-{{ ai_gen_id }}:disabled {
    background-color: {{ block.settings.button_disabled_color }};
    cursor: not-allowed;
    transform: none;
  }

  .ai-discount-coupon__loading-{{ ai_gen_id }} {
    display: none;
    align-items: center;
    gap: 8px;
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  .ai-discount-coupon__loading-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-discount-coupon__spinner-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    border: 2px solid {{ block.settings.text_color }}33;
    border-top: 2px solid {{ block.settings.text_color }};
    border-radius: 50%;
    animation: ai-discount-coupon-spin-{{ ai_gen_id }} 1s linear infinite;
  }

  @keyframes ai-discount-coupon-spin-{{ ai_gen_id }} {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .ai-discount-coupon__message-{{ ai_gen_id }} {
    padding: 12px 16px;
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 14px;
    margin-top: 8px;
    display: none;
  }

  .ai-discount-coupon__message-{{ ai_gen_id }}.success {
    background-color: {{ block.settings.success_bg_color }};
    color: {{ block.settings.success_text_color }};
    border: 1px solid {{ block.settings.success_border_color }};
    display: block;
  }

  .ai-discount-coupon__message-{{ ai_gen_id }}.error {
    background-color: {{ block.settings.error_bg_color }};
    color: {{ block.settings.error_text_color }};
    border: 1px solid {{ block.settings.error_border_color }};
    display: block;
  }

  .ai-discount-coupon__applied-codes-{{ ai_gen_id }} {
    margin-top: 16px;
  }

  .ai-discount-coupon__applied-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 8px 0;
  }

  .ai-discount-coupon__applied-code-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 12px;
    background-color: {{ block.settings.success_bg_color }};
    border: 1px solid {{ block.settings.success_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: 8px;
  }

  .ai-discount-coupon__applied-code-text-{{ ai_gen_id }} {
    color: {{ block.settings.success_text_color }};
    font-size: 14px;
    font-weight: 600;
  }

  .ai-discount-coupon__remove-button-{{ ai_gen_id }} {
    background: none;
    border: none;
    color: {{ block.settings.success_text_color }};
    cursor: pointer;
    padding: 4px;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .ai-discount-coupon__remove-button-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .ai-discount-coupon__form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-discount-coupon__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<discount-coupon-{{ ai_gen_id }}
  class="ai-discount-coupon-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-discount-coupon__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h3 class="ai-discount-coupon__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
    {% endif %}

    {% if block.settings.description != blank %}
      <p class="ai-discount-coupon__description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
    {% endif %}

    <div class="ai-discount-coupon__form-{{ ai_gen_id }}">
      <div class="ai-discount-coupon__input-wrapper-{{ ai_gen_id }}">
        <input
          type="text"
          class="ai-discount-coupon__input-{{ ai_gen_id }}"
          placeholder="{{ block.settings.placeholder_text }}"
          aria-label="Discount code"
          autocomplete="off"
          data-discount-input
        >
      </div>
      <button
        type="button"
        class="ai-discount-coupon__button-{{ ai_gen_id }}"
        data-apply-button
      >
        {{ block.settings.button_text }}
      </button>
    </div>

    <div class="ai-discount-coupon__loading-{{ ai_gen_id }}" data-loading>
      <div class="ai-discount-coupon__spinner-{{ ai_gen_id }}"></div>
      <span>Applying discount...</span>
    </div>

    <div class="ai-discount-coupon__message-{{ ai_gen_id }}" data-message></div>

    {% if cart.discount_applications.size > 0 %}
      <div class="ai-discount-coupon__applied-codes-{{ ai_gen_id }}">
        <h4 class="ai-discount-coupon__applied-title-{{ ai_gen_id }}">Applied discounts</h4>
        {% for discount_application in cart.discount_applications %}
          <div class="ai-discount-coupon__applied-code-{{ ai_gen_id }}">
            <span class="ai-discount-coupon__applied-code-text-{{ ai_gen_id }}">
              {{ discount_application.title }}
              {% if discount_application.total_allocated_amount > 0 %}
                (-{{ discount_application.total_allocated_amount | money }})
              {% endif %}
            </span>
            <button
              type="button"
              class="ai-discount-coupon__remove-button-{{ ai_gen_id }}"
              data-remove-discount="{{ discount_application.title }}"
              aria-label="Remove {{ discount_application.title }} discount"
            >
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</discount-coupon-{{ ai_gen_id }}>

<script>
  (function() {
    class DiscountCoupon{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.input = this.querySelector('[data-discount-input]');
        this.applyButton = this.querySelector('[data-apply-button]');
        this.loading = this.querySelector('[data-loading]');
        this.message = this.querySelector('[data-message]');
        this.removeButtons = this.querySelectorAll('[data-remove-discount]');
      }

      connectedCallback() {
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.applyButton.addEventListener('click', () => this.applyDiscount());
        
        this.input.addEventListener('keypress', (e) => {
          if (e.key === 'Enter') {
            e.preventDefault();
            this.applyDiscount();
          }
        });

        this.input.addEventListener('input', () => {
          this.clearMessage();
        });

        this.removeButtons.forEach(button => {
          button.addEventListener('click', (e) => {
            const discountCode = e.currentTarget.dataset.removeDiscount;
            this.removeDiscount(discountCode);
          });
        });
      }

      async applyDiscount() {
        const code = this.input.value.trim();
        
        if (!code) {
          this.showMessage('Please enter a discount code', 'error');
          return;
        }

        this.setLoading(true);
        this.clearMessage();

        try {
          const response = await fetch('/cart/update.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              attributes: {
                discount_code: code
              }
            })
          });

          if (response.ok) {
            window.location.href = `/discount/${encodeURIComponent(code)}?redirect=${encodeURIComponent(window.location.pathname)}`;
          } else {
            throw new Error('Failed to apply discount');
          }
        } catch (error) {
          this.setLoading(false);
          this.showMessage('Invalid discount code. Please try again.', 'error');
        }
      }

      async removeDiscount(discountCode) {
        this.setLoading(true);
        
        try {
          const response = await fetch('/cart/update.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              attributes: {
                discount_code: ''
              }
            })
          });

          if (response.ok) {
            window.location.reload();
          } else {
            throw new Error('Failed to remove discount');
          }
        } catch (error) {
          this.setLoading(false);
          this.showMessage('Failed to remove discount. Please try again.', 'error');
        }
      }

      setLoading(isLoading) {
        this.applyButton.disabled = isLoading;
        this.input.disabled = isLoading;
        
        if (isLoading) {
          this.loading.classList.add('active');
        } else {
          this.loading.classList.remove('active');
        }
      }

      showMessage(text, type) {
        this.message.textContent = text;
        this.message.className = `ai-discount-coupon__message-{{ ai_gen_id }} ${type}`;
      }

      clearMessage() {
        this.message.className = 'ai-discount-coupon__message-{{ ai_gen_id }}';
        this.message.textContent = '';
      }
    }

    customElements.define('discount-coupon-{{ ai_gen_id }}', DiscountCoupon{{ ai_gen_id }});
  })();
</script>

